model User {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  name                String // The name field
  email               String   @unique // The email field with a unique constraint
  password            String // The password field
  verificationToken   String? // Optional verification token field
  verificationExpires Int // Verification expiry field
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}
